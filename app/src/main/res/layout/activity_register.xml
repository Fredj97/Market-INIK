<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#E2E4EF"
    tools:context=".RegisterActivity">

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        tools:ignore="MissingConstraints">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/logo" />

    </RelativeLayout>

    <RelativeLayout
        app:layout_constraintTop_toBottomOf="@id/top"
        android:layout_width="220dp"
        android:layout_height="480dp"
        android:background="@drawable/back_right"
        app:layout_constraintRight_toRightOf="@id/top"
        android:id="@+id/style"
        tools:ignore="MissingConstraints">

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/log1"
        android:layout_width="357dp"
        android:layout_height="350dp"
        app:layout_constraintTop_toBottomOf="@id/top"
        android:layout_marginTop="60dp"
        android:background="@drawable/login_shape"
        android:orientation="vertical"
        android:paddingLeft="50dp"
        android:paddingTop="70dp"
        android:paddingRight="50dp"
        tools:layout_editor_absoluteX="20dp"
        tools:ignore="MissingConstraints">

        <EditText
            android:id="@+id/etUsername"
            android:drawableRight="@drawable/user"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="email" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:drawableRight="@drawable/key"
            android:hint="password"
            android:id="@+id/etPassword"
            android:inputType="textPassword" />


    </LinearLayout>
    <Button
        android:id="@+id/btnLogin"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:background="@drawable/rounded_btn"
        android:layout_marginTop="-15dp"
        android:layout_weight="1"
        android:backgroundTint="#00BCD4"
        tools:layout_editor_absoluteX="120dp"
        app:layout_constraintTop_toBottomOf="@id/log1"

        android:text="LOG IN"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/log1"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="-30dp"
        android:textSize="20dp"
        android:text="Login"
        android:textColor="@color/white"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="parent"
        android:padding="20dp">

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Don't have a account?"
        tools:layout_editor_absoluteX="75dp"
        tools:layout_editor_absoluteY="704dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:background="@drawable/rounded_btn"
        android:layout_weight="1"
        android:backgroundTint="#00BCD4"
        android:text="SIGN UP"
        tools:layout_editor_absoluteX="230dp"
        tools:layout_editor_absoluteY="670dp"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>